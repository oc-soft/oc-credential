{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "rootDirs": [
      "electron/src",
      "./"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./core"
    ]
  },
  "include": ["electron/src/**/*", "config/**/*", "core/*.d.ts" ]
}
